<section id="viewAds" class="viewAds">
  <h1 class="titleForm">Advertisements</h1>
  <div id="ads" class="ads">
    <table>
      <tr>
        <th>Title</th>
        <th>Publisher</th>
        <th>Description</th>
        <th>Price</th>
        <th>Date Published</th>
        <th>Actions</th>
      </tr>
      {{#each ads}}
      <tr>
        <th>{{title}}</th>
        <th>{{_acl.creator}}</th>
        <th>{{description}}</th>
        <th>{{price}}</th>
        <th>{{datePublished}}</th>
        <th>
          {{#if isAuthenticated}}
          <a onclick="{{alert this}}">Edit</a>
          <a onclick="{{alert this}}">Delete</a>
          {{/if}}
        </th>
      </tr>
      {{/each}}
    </table>
  </div>
</section>